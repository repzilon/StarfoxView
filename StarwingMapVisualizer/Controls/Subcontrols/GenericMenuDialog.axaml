<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignHeight="450"
        x:Class="StarwingMapVisualizer.Controls.Subcontrols.GenericMenuDialog"
        Name="HOST" Width="250" Title="MENU SELECT" Foreground="White" SizeToContent="Height"
        WindowStartupLocation="CenterOwner" Classes="SFDialogModalStyle SFDialogModalMenuStyle" Background="#FF429059"
        CanResize="False" CanMaximize="False" CanMinimize="False">
    <DockPanel>
        <DockPanel.Styles>
            <Style Selector="Button">
                <Setter Property="Background" Value="{Binding Background, ElementName=HOST}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontFamily" Value="{DynamicResource Atlantis}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
            </Style>
        </DockPanel.Styles>
        <TextBlock x:Name="BlurbText" DockPanel.Dock="Top" TextWrapping="Wrap" Margin="0,0,0,10">Blurb lol</TextBlock>
        <Grid>
            <StackPanel Name="SelectionMenu">
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
