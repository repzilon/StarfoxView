<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="150"
             x:Class="AvaloniaPanNZoom.CustomControls.Widget">
    <Border x:Name="Border" BorderBrush="Black" BorderThickness="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Rectangle x:Name="HeaderRectangle" Grid.Row="0" Fill="Lime" />
            <TextBlock x:Name="Header" Grid.Row="0" Text="Widget" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Rectangle Grid.Row="1" Fill="LightGray" />
        </Grid>
    </Border>
</UserControl>
